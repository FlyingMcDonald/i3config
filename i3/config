#---------------------- toggle tiling / floating -----------------
bindsym $mod+Shift+space floating toggle

#---------------------- use window title, but no border --------------- 
for_window [class=".*"] border normal 0

#---------------------- restart compton ----------------------
bindsym $mod+n exec --no-startup-id ~/.config/i3/Script/AutoCompton.sh

#------------ change focus between tiling / floating windows ----------
bindsym $mod+space focus mode_toggle

#------------ focus the parent container -----------
bindsym $mod+a focus parent

#------------------------ Mouse bindings ------------------------------
bindsym $mod+button3 --whole-window --border [class="Firefox"] floating toggle move down 24 px

#---------------- reload the configuration file -----------------------
bindsym $mod+Ctrl+r reload

#-------------------- Window title format -------------------
for_window [class=".*"] title_format "<b>%title</b>"

#---------------------- restart i3 inplace ---------------
bindsym $mod+Shift+r restart

#-------------------------------------------------------------- exit i3 (logs you out of your X session) ----------------------------------------------------------------------------
bindsym $mod+Ctrl+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#------------------- set current window send to scratchpad------------------
bindsym $mod+Shift+minus move scratchpad

#------------------- show the first scratchpad window ----------------
bindsym $mod+minus scratchpad show

