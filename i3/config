#---------- resize window (you can also use the mouse for that) -------
mode "resize" {
        bindsym left resize shrink width 5 px or 5 ppt
        bindsym up resize grow height 5 px or 5 ppt
        bindsym down resize shrink height 5 px or 5 ppt
        bindsym right resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


#---------------- Fousc window(Switch application) ----------------
mode "Fousc window" {
        bindsym f [class="Firefox"] focus,mode "default"
        bindsym i [class="jetbrains-idea"] focus, mode "default"
        bindsym e [class="Eclipse"] focus, mode "default"
        bindsym d [class="DBeaver"] focus, mode "default"
        bindsym b [class="com-install4j-runtime-launcher-UnixLauncher"] focus, mode "default"
        bindsym c [class="Code"] focus, mode "default"
        bindsym t [class="XTerm"] focus, mode "default"
        bindsym m [class="netease-cloud-music"] focus, mode "default"
        bindsym a [class="antsword"] focus, mode "default"

        # back to normal by Esc 
        bindsym Escape mode "default" 
}
bindsym $mod+d mode "Fousc window"

#--------------- Open a common program ----------------------------
mode "Open app" {
        bindsym f exec --no-startup-id firefox, mode "default"
        bindsym i exec --no-startup-id idea, mode "default" 
        bindsym e exec --no-startup-id eclipse, mode "default"
        bindsym d exec --no-startup-id dbeaver, mode "default"
        bindsym b exec --no-startup-id BurpSuiteCommunity, mode "default"

        # back to normal by Esc
        bindsym Escape mode "default"
}
bindsym $mod+o mode "Open app"

